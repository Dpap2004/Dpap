
\documentclass[12pt]{beamer}
\usetheme{CambridgeUS}
\usecolortheme{beaver}
\usepackage{graphicx}
\usepackage{subcaption}
\usepackage{lipsum}

\title{Beamer for Presentation}
\author[Upasna, Sheetal]{Upasna Kukreti\inst{1} \and Sheetal Kukreti\inst{2}}
\institute[KMV]
{
  \inst{1}%
  Dept. of Physics\\
  Keshav Mahavidyalaya
  \and
  \inst{2}%
  Faculty of Chemistry\\
  xyz
}
\date{2023}

\begin{document}
\frame{\titlepage}
\begin{frame}
\frametitle{Table of contents}
\tableofcontents
\end{frame}

\AtBeginSection[]
{
    		\begin{frame}
        		\frametitle{Table of contents}
        		\tableofcontents[currentsection]
    		\end{frame}
}

\section{Physics}
    		\begin{frame}
        			\frametitle{Newton's First Law}
        			Text in frame for showing an example:
       			 \begin{itemize}
            \item First text
            \item Second text
            \item Third text
            \item Fourth text
            \item Fifth text
        			\end{itemize}
    		\end{frame} 

    		\begin{frame}
        			In this slide \pause\\
        			the text will be partially visible \pause\\
        			And finally everything will be there
    		\end{frame}
        
\section{Chemistry}
    		\begin{frame}{Sample frame title}
        			In this slide, some important text will be
        			\alert{highlighted} because it's important.
        			Please, don't abuse it.

        			\begin{block}{Remark}
            			Sample text
        			\end{block}

        \begin{alertblock}{Important theorem}
            	Sample text in red box
        \end{alertblock}

        \begin{examples}
        		Sample text in green box. The title of the block is ``Examples".
        \end{examples}
        
    \end{frame}

    	\begin{frame}{Two Column Slide}
        		\begin{columns}
                		\column{0.5\textwidth}
                    	\begin{equation*}
                        		E=mc^2
                    	\end{equation*}

                   		\begin{itemize}
                        		\item First item
                        		\item Second  item
                    	\end{itemize}

                		\column{0.5\textwidth}
                    This text will be in the second
                    column and on a second tought this
                    is a nice looking layout in some cases.

                    \begin{figure}
                        \centering
                            	\includegraphics[width=0.8\linewidth]{pic1.jpg}
                            	\caption{Bridge}
                        	\label{pic}
                    \end{figure}
                    
        			\end{columns}    
    		\end{frame}

    \begin{frame}{Subfigures}
        	\begin{figure}
                \begin{subfigure}[]{0.4\linewidth}
                    	\centering
                    	\includegraphics[width=0.5\linewidth]{pic3.jpg}
                    	\caption{Pic1}
                \end{subfigure}
                \begin{subfigure}[]{0.4\linewidth}
                    	\centering
                    	\includegraphics[width=0.5\linewidth]{pic4.jpeg}
                    	\caption{Pic2}
                \end{subfigure}
                \centering
                \begin{subfigure}[]{0.4\linewidth}
                    \centering
                    	\includegraphics[width=0.3\linewidth]{pic5.png}
                    	\caption{Pic3}
                \end{subfigure}
                \caption{Figure with Subfigures}
                \label{fig:enter-label}
                
        \end{figure}
        
    \end{frame}
    
\end{document}
